import java.util.Scanner;
public class Play {
	public Play() {
Scanner user=new Scanner(System.in);
System.out.println("Enter a number");
while(!user.hasNextInt())
{ String s=user.next();
  System.out.println("%s is not a number",s);
}
int n=user.nextInt();
 System.out.println("The double of your number is "+2*n); }
 
 public static void main(String[] args) {
	Play game=new Play();
}
}