
public class DNAStrand {
	private String dna;
    public DNAStrand(String dna) {
    	this.dna=dna; }
    
    public boolean isValidDNA() {
    	for(int i=0;i<dna.length();i++)
    		if("ATCG-".indexOf(dna.charAt(i))<0) return false;
    	return true; }
    public String complementWC() {
    	String dna2="";
    	for(int i=0;i<dna.length();i++) {
    		/*switch(dna.charAt(i)){
    			case 'A': dna2.concat("T"); 
    			case 'T': dna2.concat("A"); 
    			case 'C': dna2.concat("G"); 
    			case 'G': dna2.concat("C"); 
    			case '-': dna2.concat("-"); 
    		} */
    		char c=dna.charAt(i);
    		if(c=='A')  {dna2.concat("T"); 
    		if(c=='T') dna2.concat("A");
    		if(c=='G') dna2.concat("C");
    		if(c=='C') dna2.concat("G");
    	
    	} }
    	System.out.println(dna2);
    	return dna2;
    				
    }
    public String palindromeWC() {
    	String compl=complementWC();
    	String pal="";
    	int l=compl.length();
    	for(int i=l-1;i>=0;i--)
    		pal.concat(compl.substring(i,i+1));
    		
    	return pal;
    }
    public boolean containsSequence(String seq) {
    	return dna.contains(seq);
    }
    public String toString() { String s=dna; return s; }
	
	
}
